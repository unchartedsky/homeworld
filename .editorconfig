# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.md]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[{*.sh, .envrc}]
indent_style = space
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0
